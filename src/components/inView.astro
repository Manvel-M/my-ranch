<script>
  import { observer } from "@/utils/observer";
  const observe = observer({
    threshold: 0.5,
  });

  document.addEventListener("DOMContentLoaded", () => {
    document
      .querySelectorAll<HTMLElement>("[data-inview]")
      .forEach((el, idx) => {
        setTimeout(() => observe.observe(el), (idx + 1) * 100);
      });
  });
</script>

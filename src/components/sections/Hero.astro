---
import { Button } from "@/components/ui";
import { navigate } from "astro:transitions/client";
---

<section
  class="relative w-full h-screen overflow-hidden bg-no-repeat bg-cover bg-bottom
    bg-[url(/hero.webp)] max-md:bg-[url(/hero-mobile.webp)] max-md:bg-right-bottom"
>
  <div class="absolute inset-0 bg-black/40 z-0"></div>
  <div
    class="relative z-10 h-full flex flex-col items-center justify-center gap-5 text-center px-4 text-background"
  >
    <h1
      class="text-4xl md:text-6xl font-bold animate-fade-right [animation-delay:200ms]"
    >
      ADVENTURE AWAITS
    </h1>
    <p class="text-lg font-medium animate-fade-left [animation-delay:400ms]">
      Turn your events into lasting memories
    </p>
    <Button
      link
      variant="primary"
      size="lg"
      rounded="full"
      href="#contact"
      className="animate-fade-up [animation-delay:600ms]"
    >
      Schedule Appointment
    </Button>
  </div>
</section>
